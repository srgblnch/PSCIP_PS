#!/bin/sh

. alba_blissrc

#Do not start device server if FOFB is running
if [ "$(pidof fofb)" ] ; then
    >&2 echo "FOFB is controlling the PSI_PC. Use Disarm command of FOFB device server to kill FOFB and start PSI_PC server"
    exit
fi

if [[ $# -eq 1 ]] ; then
    echo "Setting logs to minimum"
    VERBOSE='-v2'
else
    echo "Setting logs to $2"
    VERBOSE=$2
fi

DNAME=PSI_PC

DIR=$SICILIA/ds/suse111
if [[ $1 == "-?" ]] ; then
    $DIR/$DNAME $1
else
    screen -dm -S $DNAME-$1 $DIR/$DNAME $1 $VERBOSE
fi
